doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register - Karibu Groceries
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/styles.css')

.register-container
  form#register-form.register-form(action='/signingup' method="post")
    h2 Register
    select#role.form-control(name='role')
      option(value='' disabled='' selected='') Select Role As
      option(value='Manager') Manager
      option(value='Director') Director
      option(value='SalesAgent') Sales Agent
    input#email.form-control(type='email' name='email' placeholder='Email Address')
    input#password.form-control(type='password' name='password' placeholder='Password')
    input#confirmPassword.form-control(type='password' name='confirmPassword' placeholder='Confirm Password' )
    select#role.form-control(name='branch')
      option(value='' disabled='' selected='') Branch
      option(value='Maganjo') Maganjo
      option(value='Mattuga') Mattuga
    button.btn.btn-custom(type='submit') Sign Up
    p.mt-3
      | Already have an account? 
      a(href='/login') Login
    #message(style='display:none;')

