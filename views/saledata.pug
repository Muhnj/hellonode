doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Produce List
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/css/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/css/bootstrap.css')
  body
    .container.mt-5
      h2 Registered Produce
      table.table.table-bordered.table-striped
        thead
          tr
            th Produce Name
            th Category
            th Quantity (kg)
            th Price per kg
            th Update
            th Delete
        tbody
          if sales.length
              each sale in sales
                tr
                  td #{sale.produceName}
                  td #{sale.category}
                  td #{sale.quantity}
                  td #{sale.price}
                  td
                     a.btn.btn-primary.btn-block(href="/updateSale/"+sale._id)  update
                  td
                    form(action="/deleteSale" method="post")
                      input(type="hidden" name="id" value=sale._id)
                      button.btn.btn-danger.btn-block(type="submit")  Delete                       
script(src='/bootstrap-5.3.3-dist/bootstrap-5.3.3-dist/js/bootstrap.bundle.js')
